<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Here are some delicious foods!</h1>
    @{
        List<string> foodList = new List<string>(){"Apple Pie","Pizza","Cinnamon Rolls","Lasagna","Donuts","Chocolate Cake","Burritos"};
        foreach(string item in foodList)
        {
            if(item.StartsWith("C"))
            {
                <p style="color: red;">@item</p>
            } else {
                <p>@item</p>
            }
        }
    }
    

</body>
</html>