@{
    ViewData["Title"] = "Dashboard";
}

@model Calculator
<div class="text-center mb-5">
    <div class="d-flex flex-column">
        <div class="d-flex justify-content-between mt-4">
            <h2>Welcome @Context.Session.GetString("UserName")</h2>
            <form asp-action="logout" asp-controller="Home" method="post">
                <button type="submit" class="btn btn-danger">Log Out</button>
            </form>
        </div>
        <div style="height: 4px; background-color: rgba(0,0,0,.4); margin-top: .5em;"></div>
    </div>
    <div>
        <h1 class="mt-5">@Context.Session.GetInt32("favNum")</h1>
        <div class="d-flex justify-content-center mb-3 gap-4">
            <form asp-action="domath" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Operation" value="+">
                <button type="submit" class="btn btn-warning" style="width: 10em; height: 3em;">+ 1</button>
            </form>
            <form asp-action="domath" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Operation" value="-">
                <button type="submit" class="btn btn-primary" style="width: 10em; height: 3em;">- 1</button>
            </form>
        </div>
        <div class="d-flex justify-content-center gap-4">
            <form asp-action="domath" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Operation" value="x">
                <button type="submit" class="btn btn-danger" style="width: 10em; height: 3em;">x 2</button>
            </form>
            <form asp-action="domath" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Operation" value="+random">
                <button type="submit" class="btn btn-success" style="width: 10em; height: 3em;">+ Random</button>
            </form>
        </div>
    </div>
</div>