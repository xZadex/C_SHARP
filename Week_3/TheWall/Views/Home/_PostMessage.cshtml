@model Message
<h3 class="mt-3">Post a message</h3>
<form asp-action="NewMessage" asp-controller="Home" method="post">
    <input type="hidden" value="@ViewBag.UserId" asp-for="UserId">
    <div class="mt-3">
        <textarea asp-for="Content" rows="4" cols="50" class="p-2"></textarea>
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn btn-primary mt-3" style="width: 10em;">Post</button>
    </div>
</form>
