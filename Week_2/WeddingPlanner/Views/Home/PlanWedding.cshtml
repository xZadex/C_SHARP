@{
    ViewData["Title"] = "Plan a Wedding";
}

@model Wedding
<div class="d-flex justify-content-between align-items-center mt-4">
    <div>
        <h3 style="padding: 0; margin: 0;">Welcome @Context.Session.GetString("UserFirst")!</h3>
    </div>
    <div>
        <ul class="d-flex gap-2 list-unstyled" style="padding: 0; margin: 0;">
            <li><a asp-action="Weddings">Home</a></li>
            <li>|</li>
            <li>Plan a Wedding</li>
            <li>|</li>
            <li>
                <form asp-action="Logout" asp-controller="Home" method="post">
                    <input class="logout-link" type="submit" value="Logout" style="border: none; background:none; color:#0D6EFD; text-decoration: underline; padding:0; margin:0;"/>
                </form>
            </li>
        </ul>
    </div>
</div>
<div style="height: 2px; width: 100%; background-color: black; margin-top: 5px;"></div>
<main class="mt-4 col-5">
    <h1>Plan a Wedding</h1>
    <form asp-action="CreateWedding" asp-controller="Home" method="post">
        <input type="hidden" value="@ViewBag.UserId" asp-for="CreatorId">
        <div class="form-group">
            <span asp-validation-for="WedderOne" class="text-danger"></span><br>
            <label asp-for="WedderOne">Wedder One:</label>
            <input asp-for="WedderOne" class="form-control mb-3">
        </div>
        <div class="form-group">
            <span asp-validation-for="WedderTwo" class="text-danger"></span><br>
            <label asp-for="WedderTwo">Wedder Two:</label>
            <input asp-for="WedderTwo" class="form-control mb-3">
        </div>
        <div class="form-group">
            <span asp-validation-for="WeddingDate" class="text-danger"></span><br>
            <label asp-for="WeddingDate">Date:</label>
            <input asp-for="WeddingDate" class="form-control mb-3">
        </div>
        <div class="form-group">
            <span asp-validation-for="WeddingAddress" class="text-danger"></span><br>
            <label asp-for="WeddingAddress">Address:</label>
            <input asp-for="WeddingAddress" class="form-control mb-3">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-secondary">Create</button>
        </div>
    </form>
</main>
