@{
    ViewData["Title"] = "Show Product Page";
}
@model MyViewModel
<div class="text-center">
    <nav class="d-flex justify-content-center align-items-center mt-5">
        <ul class="d-flex align-items-center list-unstyled gap-2">
            <li class="h4" style="width: 100px;"><a asp-action="Index">Products</a></li>
            <li class="h4" style="width: 10px;">|</li>
            <li class="h4" style="width: 100px;"><a asp-action="Category">Categories</a></li>
        </ul>
    </nav>
    <main>
        <h2 class="mt-3">@Model.Product.Name</h2>
        <div class="d-flex justify-content-evenly mt-5">
            <div>
                <h3>Categories</h3>
                <ul class="list-unstyled p-0">
                    @foreach(Association a in Model.Product.CategoryList)
                    {
                        <li>@a.Category.Name</li>
                    }
                </ul>
            </div>
            <div>
                @await Html.PartialAsync("_AddCategory", Model.Association)
            </div>
        </div>
    </main>
</div>